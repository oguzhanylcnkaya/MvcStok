@using MvcStok.Models.Entity
@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">

    <div>
        <label>Müşteri Adı</label>
        <input class="form-control" type="text" name="MusteriAd" />
        @Html.ValidationMessageFor(m => m.MusteriAd, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>Müşteri Soyad</label>
        <input class="form-control" type="text" name="MusteriSoyad" />
        @Html.ValidationMessageFor(m => m.MusteriSoyad, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert("Müşteri Ekleme İşlemi Yapıldı...");
        });
        //Bir işlem yaptığımızda sitenin bize gönderdiği mesaj işlemi
    </script>

</form>

