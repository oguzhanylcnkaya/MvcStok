@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" placeholder="Buraya Ürünün Adını Yazınız..." required="" maxlength="50" />
        
    </div>
    <div style="margin-top:15px">
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="Marka" placeholder="Buraya Markayı Yazınız..." required="" maxlength="50"/>
    </div>
    <div style="margin-top:15px">
        <label>Ürün Kategorisi</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KategoriID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" placeholder="Buraya Ürünün Fiyatını Yazınız..." name="Fiyat" required="" />
    </div>
    <div style="margin-top:15px">
        <label>Stok Adet</label>
        <input type="text" class="form-control" placeholder="Buraya Stok Adetini Yazınız..." name="Stok" required="" />

    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

